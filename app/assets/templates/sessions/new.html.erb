<form ng-submit="create()">
    <div class="row">
        <div class="columns">
            <div class="title text-center">
                <h1>Sign in</h1>
            </div>
        </div>
    </div>

    <div class="row">
      <div class="large columns">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Email" ng-model="session.email"/>
      </div>
    </div>

    <div class="row">
      <div class="large columns">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Password" ng-model="session.password"/>
      </div>
    </div>

  <div class="row">
    <div class="large large-centered columns">
      <button type="submit" class="button expand">Sign up</button>
    </div>
  </div>
</form>


