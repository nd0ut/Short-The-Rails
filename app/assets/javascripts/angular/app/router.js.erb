app.config(function ($routeProvider, $locationProvider) {
    $routeProvider
        .when('/sign_in', {
            templateUrl: '<%= asset_path("sessions/new.html.erb") %>',
            controller: 'SessionsCtrl'
        })

        .when('/sign_up', {
            templateUrl: '<%= asset_path("registrations/new.html.erb") %>',
            controller: 'RegistrationsCtrl'
        })

        .when('/sign_out', {
            template: 'logout',
            controller: 'SessionsCtrl'
        })

        .when('/my_links', {
            templateUrl: '<%= asset_path("links/index.html") %>',
            controller: 'MyLinksCtrl'
        })

        .when('/home', {
            templateUrl: '<%= asset_path("home/index.html") %>',
            controller: 'HomeCtrl'
        })

        .otherwise({redirectTo: '/home'});

//    $locationProvider.html5Mode(true);
})