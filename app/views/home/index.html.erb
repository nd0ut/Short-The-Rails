<div class="container">
  <%= form_tag '/short', :remote => true, :id => 'form-short', :class => 'form-inline' do %>

      <h2 id="form-short-heading">Short The Rails</h2>

      <div class="input-prepend input-append">
        <span class="add-on">http://</span>
        <%= text_field_tag 'url', 'google.ru', :id => 'form-short-url-field' %>
        <span id="add-on">
            <%= button_tag 'Short!', :class => 'btn btn-primary', :id => 'form-short-submit'%>
        </span>
      </div>

      <div id="form-short-result">
        <a id="shorted-url-link" target="_blank"></a>
        <span id="form-short-error"></span>
      </div>

  <% end %>


</div>