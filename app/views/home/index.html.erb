<div class="container">
  <%= form_tag '/short', :remote => true, :id => 'form-short', :class => 'form-inline row', 'autocomplete' => 'off' do %>

      <h2 id="form-short-heading">Short The Rails</h2>

      <div class="input-prepend input-append">
        <span class="add-on">http://</span>
        <%= text_field_tag 'url', 'google.ru', :id => 'form-short-url-field' %>
        <span id="add-on">
            <%= button_tag 'Short!', :class => 'btn btn-primary', :id => 'form-short-submit'%>
        </span>
      </div>

      <div id="form-short-result">
        <a id="form-short-result-link" target="_blank"></a>
        <span id="form-short-result-error"></span>
        <button id="form-short-result-close" class="close" type="button">&times;</button>
      </div>

  <% end %>

  <p style="text-align: center;">nd0ut &copy; 2013</p>


</div>