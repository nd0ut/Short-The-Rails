.navbar
  .navbar-inner
    .container
      = link_to 'Short The Rails', root_url, :class => 'brand'
      %ul.nav.pull-right
        -unless user_signed_in?
          %li=link_to 'Log in', '#sign-in-modal', 'data-toggle' => 'modal', 'role' => 'button'
          %li=link_to 'Sign up', '#sign-up-modal', 'data-toggle' => 'modal', 'role' => 'button'
        -else
          %li
            %a
              Logged as
              =current_user.username || current_user.email
          %li=link_to 'My links', urls_path
          %li
            =link_to('Logout', destroy_user_session_path, :method => :delete)